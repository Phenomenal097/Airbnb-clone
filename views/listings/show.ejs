    <% layout("/layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details:</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%=listingData.image.url%>" class="card-img-top" alt="listing_image">
            <div class="card-body">
              <p class="card-text">
                <b><%=listingData.title %></b> <br>
                <%=listingData.description %> <br>
                &#8377; <%=listingData.price.toLocaleString("en-IN") %> <br>
                <%=listingData.location %> <br>
                <%=listingData.country %>
              </p>
            </div>
            </div>
    <div class="btns mt-3">
    <a href="/listings/<%=listingData._id%>/edit" class="btn btn-dark col-1 offset-3">Edit</a>
    <form action="/listings/<%=listingData._id%>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-4">Delete</button>
    </form>
</div>
</div>