    <% layout("/layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3><%=listingData.title %></h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%=listingData.image.url%>" class="card-img-top" alt="listing_image">
            <div class="card-body">
              <p class="card-text">
                <%=listingData.description %> <br>
                &#8377; <%=listingData.price.toLocaleString("en-IN") %> <br>
                <%=listingData.location %> <br>
                <%=listingData.country %>
              </p>
            </div>
            </div>
    <div class="btns mt-3">
    <a href="/listings/<%=listingData._id%>/edit" class="btn btn-dark col-1 offset-3">Edit</a>
    <form action="/listings/<%=listingData._id%>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-4">Delete</button>
    </form>
</div>
</div>

<div class="col-8 offset-3">
  <hr/>
  <h4>Leave a Review!!</h4>
  <form action="/listings/<%=listingData._id%>/reviews" method="POST" novalidate class="needs-validation">
    <div class="mb-3 row">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="1" max="5" id="rating" class="form-range" name="review[rating]"/>
    </div>

    <div class="mb-3 row">
      <label for="comment" class="form-label">Comment</label>
      <textarea name="review[comment]" rows="4" cols="30" id="comment" class="form-control" required></textarea>
      <div class="invalid-feedback">Please enter comments</div>
    </div>

    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <hr />
<p><b>All Reviews</b></p>
<div class="row">
  <% for (let review of listingData.reviews) { %>
    <div class="col-md-6 mb-3 mt-3">
      <div class="card h-100">
        <div class="card-body text-center review-card">
          <h5 class="card-title">Abella</h5>
          <div class="review-content">
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> Stars</p>
          <form action="/listings/<%= listingData._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

  


