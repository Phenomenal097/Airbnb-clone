<%layout('/layouts/boilerplate.ejs') %>
    <div class="row">
        <div class="col-8 offset-2">
    <h3>Add new listing</h3>
    <form action="/listings" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listingData[title]" class="form-control" required/>
            <div class="valid-feedback">Title looks good!</div>
        </div>
    
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listingData[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a valid description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Enter image URL/Link</label>
            <input type="text" name="listingData[image][url]" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listingData[price]" class="form-control" required />
                    <div class="invalid-feedback">Please enter a valid Price</div>

                </div>
            </div>

            <div class="col-md-8">
                <div class="mb-3">
                    <label for="lacation" class="form-label">Location</label>
                    <input type="text" name="listingData[location]" class="form-control" required/>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listingData[country]" class="form-control" required/>
            <div class="invalid-feedback">Country should be valid</div>
        </div>
        <button class="btn btn-dark add-btn">Submit details</button>
    </form>
</div>
</div>