<%layout('/layouts/boilerplate.ejs') %>

    <div class="row">
        <div class="col-8 offset-2">
    <h3>Add new listing</h3>
    <form action="/listings" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Add a catchy title</label>
            <input type="text" name="title" class="form-control" />
        </div>
    
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Enter image URL/Link</label>
            <input type="text" name="image" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="price" class="form-control" />
                </div>
            </div>

            <div class="col-md-8">
                <div class="mb-3">
                    <label for="lacation" class="form-label">Location</label>
                    <input type="text" name="location" class="form-control" />
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" class="form-control" />
        </div>
        <button class="btn btn-dark add-btn">Submit details</button>
    </form>
</div>
</div>