<%layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Add new listing</h3>
    <form action="/listings/<%=listingData._id%>?_method=PUT" method="POST" novalidate class="needs-validation">

        <div class="mb-3">
            <label for="title" class="form-label">Enter a catchy title</label>
            <input type="text" name="listingData[title]" value="<%=listingData.title %>" class="form-control" required />
            <div class="valid-feedback">Title looks good!</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label"></label>
            <textarea type="text" name="listingData[description]" class="form-control" required><%=listingData.description%></textarea>
            <div class="invalid-feedback">Please enter a valid description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Enter image url/ link</label>
            <input type="text" name="listingData[image][url]" value="<%=listingData.image.url %>" class="form-control" required/>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listingData[price]" class="form-control" value="<%=listingData.price %>" required/>
            <div class="invalid-feedback">Please enter a valid Price</div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listingData[location]" class="form-control" value="<%=listingData.location %>" required/>
            <div class="invalid-feedback">Location should be valid</div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Country</label>
            <input type="text" name="listingData[country]" class="form-control" value="<%=listingData.country %>" required/>
            <div class="invalid-feedback">Country should be valid</div>
        </div>

        <button class="add-btn edit-btn">Submit details</button>
    </form>
</div>
</div>