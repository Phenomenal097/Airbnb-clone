<%layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Add new listing</h3>
    <form action="/listings/<%=listingData._id%>?_method=PUT" method="POST">

        <div class="mb-3">
            <label for="title" class="form-label">Enter a catchy title</label>
            <input type="text" name="listingData[title]" value="<%=listingData.title %>" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="description" class="form-label"></label>
            <textarea type="text" name="listingData[description]" class="form-control"><%=listingData.description%></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Enter image url/ link</label>
            <input type="text" name="listingData[image]" value="<%=listingData.image %>" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listingData[price]" class="form-control" value="<%=listingData.price %>" />
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listingData[location]" class="form-control" value="<%=listingData.location %>" />
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listingData[country]" class="form-control" value="<%=listingData.country %>" />
        </div>

        <button class="add-btn edit-btn">Submit details</button>
    </form>
</div>
</div>